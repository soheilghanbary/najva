generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  name      String
  username  String   @unique
  email     String   @unique
  image     String
  bio       String   @default("")
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
  sites     Site[]
  likes     Like[]

  @@index([name])
}

model Site {
  id        String   @id @default(cuid())
  name      String
  url       String
  image     String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  likes     Like[]

  @@index([name, url])
}

model Like {
  id        String   @id @default(cuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  site      Site     @relation(fields: [siteId], references: [id])
  siteId    String
  createdAt DateTime @default(now())

  @@unique([userId, siteId])
  @@index([userId, siteId])
}
